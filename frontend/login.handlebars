<!DOCTYPE html>
<html lang="pt-BR" data-bs-theme="light" class="h-100">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Formulário de login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body class="d-flex align-items-center py-4 bg-body-tertiary h-100">
<main class="w-100 m-auto form-container">

    <form action="/login" method="POST" class="form-signin">
        <img id="logo" src="imagens/Copilot_light.png" alt="Logo"
             style="width: 256px; height: 256px; object-fit: cover; display: block; margin: 0 auto;"
        />
        <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
        <div class="form-floating">
            <input type="email" class="form-control" name="email" id="floatingInput" placeholder="<your email>">
            <label for="floatingInput">Email</label>
        </div>
        <div class="form-floating">
            <input type="password" class="form-control" name="senha" id="floatingPassword" placeholder="<your password>">
            <label for="floatingPassword">Password</label>
        </div>
        <button class="btn btn-primary w-100 py-2" type="submit" value="Login">Sign in</button>
    </form>

    <div class="theme-selector">
        <div class="d-flex flex-column gap-2">
            <button class="theme-btn" data-theme="light">
                <i class="bi bi-sun"></i> Claro
            </button>
            <button class="theme-btn" data-theme="dark">
                <i class="bi bi-moon-stars"></i> Escuro
            </button>
            <button class="theme-btn" data-theme="auto">
                <i class="bi bi-circle-half"></i> Auto
            </button>
        </div>
    </div>
</main>

<script>
    function aplicarTemaVisual(temaAtual) {
        const html = document.documentElement;
        const logo = document.getElementById('logo');

        html.setAttribute('data-bs-theme', temaAtual);

        // Troca de imagem com base no tema
        if (temaAtual === 'dark') {
            logo.src = 'imagens/Copilot_dark.png';
        } else {
            logo.src = 'imagens/Copilot_light.png';
        }

        // Atualiza botões
        document.querySelectorAll('.theme-btn').forEach(btn => {
            btn.classList.toggle('active', btn.dataset.theme === temaAtual);
        });
    }

    function gerenciarTema(temaEscolhido) {
        localStorage.setItem('tema-preferido', temaEscolhido);

        if (temaEscolhido === 'auto') {
            const sistemaEscuro = window.matchMedia('(prefers-color-scheme: dark)').matches;
            aplicarTemaVisual(sistemaEscuro ? 'dark' : 'light');
        } else {
            aplicarTemaVisual(temaEscolhido);
        }
    }

    // Listeners de botão
    document.querySelectorAll('.theme-btn').forEach(btn => {
        btn.addEventListener('click', () => gerenciarTema(btn.dataset.theme));
    });

    // Reagir a mudanças do sistema (modo auto)
    window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', e => {
        if (localStorage.getItem('tema-preferido') === 'auto') {
            gerenciarTema('auto');
        }
    });

    // Ao carregar a página
    const temaSalvo = localStorage.getItem('tema-preferido') || 'auto';
    gerenciarTema(temaSalvo);
</script>
</body>
</html>